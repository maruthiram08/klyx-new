{
  "version": 2,
  "name": "klyx",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "JWT_SECRET_KEY": "@jwt_secret_key",
    "CORS_ORIGIN": "https://klyx.vercel.app"
  },
  "regions": ["bom1"]
}
